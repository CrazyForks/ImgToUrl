# 图床转换系统 - 环境变量配置文件
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=mysql
DB_PORT=3306
DB_USER=imagehost
DB_PASSWORD=your_secure_password_here
DB_NAME=image_host

# ===========================================
# Cloudflare R2 存储配置
# ===========================================
# 在 Cloudflare 控制台获取以下信息
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_custom_domain.com

# ===========================================
# Redis 配置 (可选)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# 服务器配置
# ===========================================
SERVER_PORT=8080
SERVER_MODE=release

# ===========================================
# 上传限制配置
# ===========================================
# 单文件最大大小 (字节) - 默认 10MB
MAX_FILE_SIZE=10485760

# 批量上传最大总大小 (字节) - 默认 50MB
MAX_BATCH_SIZE=52428800

# 批量上传最大文件数量
MAX_BATCH_COUNT=10

# 允许的文件类型
ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,image/svg+xml,image/bmp,image/tiff

# ===========================================
# 前端配置
# ===========================================
# API 基础 URL
VITE_API_BASE_URL=http://localhost:8080

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥 (如果启用认证)
JWT_SECRET=your_jwt_secret_key_here

# CORS 允许的域名
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================================
# 性能配置
# ===========================================
# 数据库连接池大小
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# Redis 连接池大小
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# ===========================================
# 图片处理配置
# ===========================================
# 是否启用图片压缩
ENABLE_COMPRESSION=true

# 压缩质量 (1-100)
COMPRESSION_QUALITY=85

# 最大图片尺寸
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048

# 是否生成缩略图
ENABLE_THUMBNAILS=true

# 缩略图尺寸
THUMBNAIL_SIZE=200

# ===========================================
# 监控和日志配置
# ===========================================
# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 是否启用访问日志
ENABLE_ACCESS_LOG=true

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# ===========================================
# 缓存配置
# ===========================================
# 统计信息缓存时间 (秒)
STATS_CACHE_TTL=300

# 图片信息缓存时间 (秒)
IMAGE_CACHE_TTL=3600

# ===========================================
# 速率限制配置
# ===========================================
# 每分钟最大请求数
RATE_LIMIT_PER_MINUTE=60

# 每小时最大上传数
UPLOAD_LIMIT_PER_HOUR=100

# ===========================================
# 邮件配置 (可选)
# ===========================================
# SMTP 服务器配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# 备份配置 (可选)
# ===========================================
# 是否启用自动备份
ENABLE_AUTO_BACKUP=false

# 备份间隔 (小时)
BACKUP_INTERVAL=24

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# ===========================================
# 开发环境配置
# ===========================================
# 是否启用调试模式
DEBUG=false

# 是否启用性能分析
ENABLE_PROFILING=false

# 是否启用 API 文档
ENABLE_SWAGGER=false

# ===========================================
# SSL/TLS 配置 (生产环境)
# ===========================================
# SSL 证书路径
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# 是否强制 HTTPS
FORCE_HTTPS=false

# ===========================================
# 第三方服务配置
# ===========================================
# Google Analytics ID (可选)
GA_TRACKING_ID=

# Sentry DSN (错误监控，可选)
SENTRY_DSN=

# ===========================================
# 自定义配置
# ===========================================
# 网站标题
SITE_TITLE=高性能图床转换系统

# 网站描述
SITE_DESCRIPTION=基于 Vue3 + Go + MySQL + Cloudflare R2 的高性能图床转换系统

# 网站关键词
SITE_KEYWORDS=图床,图片上传,图片存储,Cloudflare R2,Vue3,Go

# 联系邮箱
CONTACT_EMAIL=admin@yourdomain.com

# ICP 备案号 (中国大陆)
ICP_LICENSE=

# ===========================================
# 注意事项
# ===========================================
# 1. 请确保所有密码和密钥都是强密码
# 2. 生产环境请将 SERVER_MODE 设置为 release
# 3. 定期更新密钥和证书
# 4. 不要将此文件提交到版本控制系统
# 5. 确保 Cloudflare R2 配置正确
# 6. 建议启用 Redis 以提高性能
# 7. 生产环境建议启用 HTTPS